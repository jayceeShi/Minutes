<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/topicTitle"
        android:layout_width="306dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/killtime"
        android:layout_toStartOf="@+id/Menu" />

    <ImageView
        android:id="@+id/knowTxt"
        android:layout_width="270dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/know"
        android:layout_below="@+id/topicTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tag1"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/goalBack"
        android:layout_below="@+id/knowTxt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#火箭"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tag2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#单词"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/tag1"
        android:layout_toEndOf="@+id/tag1"
        android:layout_alignTop="@+id/tag3" />

    <TextView
        android:id="@+id/tag3"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/tag1"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/tag2"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#机器学习"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tag4"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/tag3"
        android:layout_alignTop="@+id/tag3"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/tag3"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#可视化"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tag5"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/tag4"
        android:layout_alignTop="@+id/tag4"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/tag4"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#NBA"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tag6"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/tag1"
        android:layout_below="@+id/tag1"
        android:layout_marginTop="20dp"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#人工智能"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tag7"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/tag6"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/tag6"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#权力的游戏"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tag8"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/tag7"
        android:layout_alignTop="@+id/tag7"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/tag7"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#骑士"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/timeBack"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/tag6"
        android:layout_below="@+id/tag6"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/textfield" />

    <EditText
        android:id="@+id/editTime"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timeBack"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="date"
        android:text="结束的时间是"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/time1"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/timeBack"
        android:layout_below="@+id/timeBack"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#一周"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/time2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/time1"
        android:layout_alignTop="@+id/time1"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/tag6"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#20天"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/time3"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/time2"
        android:layout_alignStart="@+id/tag3"
        android:layout_alignTop="@+id/time2"
        android:layout_marginLeft="8dp"

        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#一个月"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/time4"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/time3"
        android:layout_alignBottom="@+id/time3"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/tag3"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#三个月"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/time5"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/time4"
        android:layout_alignTop="@+id/time4"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/tag4"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#一年"
        android:textAlignment="center" />

    <Button
        android:id="@+id/Menu"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/topicTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="0dp"
        android:background="@drawable/capture" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="每天"
        android:layout_below="@+id/time1"
        android:layout_alignEnd="@+id/time1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/checkBox"
        app:srcCompat="@drawable/create"
        android:layout_alignEnd="@+id/timeBack" />

</RelativeLayout>