<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC">

    <ImageView
        android:id="@+id/topicTitle"
        android:layout_width="306dp"
        android:layout_height="52dp"
        android:layout_alignEnd="@+id/knowTxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/killtime" />

    <ImageView
        android:id="@+id/knowTxt"
        android:layout_width="300dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/know"
        android:layout_below="@+id/topicTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tag1"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/goalBack"
        android:layout_below="@+id/knowTxt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="  #机器学习"

        android:textSize="11sp" />

    <TextView
        android:id="@+id/tag2"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/tag1"
        android:layout_alignTop="@+id/tag3"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/tag1"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="  #塑身"

        android:textSize="11sp" />

    <TextView
        android:id="@+id/tag3"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/tag1"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/tag2"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="  #美术史"

        android:textSize="11sp" />

    <TextView
        android:id="@+id/tag4"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/tag3"
        android:layout_alignTop="@+id/tag3"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/tag3"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="  #海岛游"

        android:textSize="11sp" />

    <TextView
        android:id="@+id/tag5"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/tag1"
        android:layout_below="@+id/tag1"
        android:layout_marginTop="10dp"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="  #人工智能"

        android:textSize="11sp" />

    <TextView
        android:id="@+id/tag6"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/tag2"
        android:layout_below="@+id/tag2"
        android:layout_marginTop="10dp"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="  #红烧肉做法"

        android:textSize="11sp" />

    <TextView
        android:id="@+id/tag7"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/tag3"
        android:layout_below="@+id/tag3"
        android:layout_marginTop="10dp"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="  #日本语"

        android:textSize="11sp" />

    <TextView
        android:id="@+id/tag8"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/tag4"
        android:layout_below="@+id/tag4"
        android:layout_marginTop="10dp"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="  #书法赏析"

        android:textSize="11sp" />

    <TextView
        android:id="@+id/tag9"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/tag5"
        android:layout_below="@+id/tag5"
        android:layout_marginTop="10dp"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="  #软件工程"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tag10"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/tag6"
        android:layout_below="@+id/tag6"
        android:layout_marginTop="10dp"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="  #化妆技巧"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tag11"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/tag7"
        android:layout_below="@+id/tag7"
        android:layout_marginTop="10dp"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="  #美国文化"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tag12"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/tag8"
        android:layout_below="@+id/tag8"
        android:layout_marginTop="10dp"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="  #算法交易"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/timeBack"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tag9"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/textfield" />

    <EditText
        android:id="@+id/editTime"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/timeBack"
        android:layout_below="@+id/tag9"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="43dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="date"
        android:text="结束的时间是"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/time1"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#一周"
        android:textAlignment="center"
        android:layout_alignTop="@+id/time2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/time2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/editTime"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/time1"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#20天"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/time3"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/time2"
        android:layout_alignTop="@+id/time2"
        android:layout_marginLeft="15dp"

        android:layout_toEndOf="@+id/time2"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#一个月"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/time4"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/time3"
        android:layout_alignTop="@+id/time3"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/time3"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#三个月"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/time5"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/time4"
        android:layout_alignEnd="@+id/timeBack"
        android:layout_alignTop="@+id/time4"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/time4"
        android:background="@drawable/tagback"
        android:gravity="center_vertical"
        android:text="#一年"
        android:textAlignment="center" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/leftM"
        android:layout_below="@+id/time1"
        android:layout_marginTop="24dp"
        android:text="每天"
        android:theme="@style/MyCheckBox"
        android:textColorLink="#bca590" />

    <ImageView
        android:id="@+id/createT"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/create" />

    <ImageView
        android:id="@+id/leftM"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@+id/created"
        app:srcCompat="@drawable/left" />

</RelativeLayout>