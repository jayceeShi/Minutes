<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfbfb"
    tools:context="com.example.pku_j.software.MainActivity">


    <ImageView
        android:id="@+id/title"
        android:layout_width="306dp"
        android:layout_height="52dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/killtime"
        app:layout_constraintRight_toLeftOf="@+id/menu"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu"
        android:layout_width="65dp"
        android:layout_height="52dp"
        android:layout_marginRight="-66dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/capture"
        app:layout_constraintRight_toRightOf="@+id/title"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clock"
        android:layout_width="346dp"
        android:layout_height="285dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:srcCompat="@drawable/watch" />

    <ImageView
        android:id="@+id/display"
        android:layout_width="356dp"
        android:layout_height="154dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#fbfbfb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clock"
        tools:layout_editor_absoluteY="350dp" />

    <TextView
        android:id="@+id/Time"
        android:layout_width="146dp"
        android:layout_height="68dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/clock"
        app:layout_constraintLeft_toLeftOf="@+id/clock"
        app:layout_constraintRight_toRightOf="@+id/clock"
        app:layout_constraintTop_toTopOf="@+id/clock"
        app:layout_constraintVertical_bias="0.552" />


</android.support.constraint.ConstraintLayout>
