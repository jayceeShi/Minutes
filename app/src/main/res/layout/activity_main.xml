<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfbfb"
    android:gravity="center"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="com.example.pku_j.software.MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="327dp"
        android:layout_height="240dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clock"
        app:layout_constraintVertical_bias="0.463"
        tools:layout_editor_absoluteY="424dp" />

    <ImageView
        android:id="@+id/title"
        android:layout_width="306dp"
        android:layout_height="52dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/killtime"
        app:layout_constraintRight_toLeftOf="@+id/menu"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu"
        android:layout_width="65dp"
        android:layout_height="52dp"
        android:layout_marginRight="-66dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/capture"
        app:layout_constraintRight_toRightOf="@+id/title"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clock"
        android:layout_width="332dp"
        android:layout_height="305dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:srcCompat="@drawable/watch" />

    <ImageView
        android:id="@+id/display"
        android:layout_width="279dp"
        android:layout_height="135dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name"
        app:layout_constraintVertical_bias="0.12" />

    <TextView
        android:id="@+id/Time"
        android:layout_width="146dp"
        android:layout_height="68dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/clock"
        app:layout_constraintLeft_toLeftOf="@+id/clock"
        app:layout_constraintRight_toRightOf="@+id/clock"
        app:layout_constraintTop_toTopOf="@+id/clock"
        app:layout_constraintVertical_bias="0.552" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="223dp"
        android:layout_height="43dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="23dp"
        android:background="@android:color/background_light"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="等待推荐中"
        android:textAlignment="center"

        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="15sp"
        android:typeface="normal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clock" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="46dp"
        android:layout_height="37dp"
        android:background="#fbfbfb"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Name"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/clock"
        tools:layout_editor_absoluteY="402dp" />

    <TextView
        android:id="@+id/Rtime"
        android:layout_width="46dp"
        android:layout_height="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:background="#ffffff"
        android:text="time"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/display"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Name"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.428" />



</android.support.constraint.ConstraintLayout>
