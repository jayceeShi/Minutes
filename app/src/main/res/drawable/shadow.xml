<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- 阴影部分 -->
        <!-- 个人觉得更形象的表达：top代表下边的阴影高度，left代表右边的阴影宽度。其实也就是相对应的offset，solid中的颜色是阴影的颜色，也可以设置角度等等 -->
    <item
        android:left="0.8dp"
        android:top="0.8dp"
        android:bottom="0.8dp"
        android:right="0.8dp">

        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#DCDCDC"
                android:startColor="#DCDCDC"/>

            <corners
                android:bottomLeftRadius="0dip"
                android:bottomRightRadius="0dip"
                android:topLeftRadius="0dip"
                android:topRightRadius="0dip"/>
        </shape>
    </item>
    <item
        android:left="1.5dp"
        android:top="1.5dp"
        android:bottom="1.5dp"
        android:right="1.5dp">

        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#969696"
                android:startColor="#969696"/>

            <corners
                android:bottomLeftRadius="0dip"
                android:bottomRightRadius="0dip"
                android:topLeftRadius="0dip"
                android:topRightRadius="0dip"/>
        </shape>
    </item>
    <item>

        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#D7D7D7"
                android:startColor="#D7D7D7"/>

            <corners
                android:bottomLeftRadius="0dip"
                android:bottomRightRadius="0dip"
                android:topLeftRadius="0dip"
                android:topRightRadius="0dip"/>
        </shape>
    </item>

        <!-- 背景部分 -->
        <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:bottom="2dp"
        android:right="2dp">

        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#FbFbFb"
                android:startColor="#FbFbFb"/>

            <corners
                android:bottomLeftRadius="0dip"
                android:bottomRightRadius="0dip"
                android:topLeftRadius="0dip"
                android:topRightRadius="0dip"/>
        </shape>
    </item>

</layer-list>
